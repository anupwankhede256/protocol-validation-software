    width: 16px;
    height: 16px;
}

QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 16px;
    height: 16px;
}*/

QLabel {
    font-weight: bold;
    font-size: 12px;  
}

QGroupBox {
    border: 1px solid #4b7bec;
    border-radius: 5px;
    margin-top: 1ex;
    font-weight: bold;
    background-color: #ffffff;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 3px;
    background-color: #ffffff;
    color:#1434A4;
}

QTableWidget {
    border: 1px solid #4b7bec;
    background-color: #fff;
    gridline-color: #c8d6e5;
    font-size: 11px;
}

QTableWidget::item:selected {
    background-color: #0096FF;
    color: white;
}

QHeaderView::section {
    background-color: #c8d6e5;
    padding: 4px;
    border: 1px solid #4b7bec;
    font-weight: bold;
    color:#1434A4;
}

QTextEdit {
    border:0.5px solid #4b7bec;
    border-radius: 4px;
    background-color: #ffffff;
}

QStatusBar {
    background-color:#4682B4;
    color: white;
    font-size: 10pt;
}

/* Scroll bar */
QScrollBar:horizontal {
    height: 12px;
    background: #f0f8ff;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #0096FF;
    border-radius: 6px;
}

QScrollBar:vertical {
    width: 12px;
    background: #f0f8ff;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #0096FF;
    border-radius: 6px;
}

QScrollBar::add-line, QScrollBar::sub-line {
    background: #f0f8ff;
}

/* Specific component styling */
#TestNameField {
    padding: 4px 8px;
    border: 2px solid #0096FF;
    border-radius: 4px;
    background-color: #ffffff;
    selection-background-color: #0096FF;
    selection-color: white;
}

/* Splitter styling */
QSplitter::handle {
    background-color: #4b7bec;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

/* Toolbar styling */
QToolBar {
    background-color:#FFFAFA;
    spacing: 3px;
    padding: 3px;
}

QToolButton {
    /*background-color: #0096FF;*/
    color: white;
    border-radius: 3px;
    padding: 3px;
}

QToolButton:hover {
    background-color: #191970;
}
QGroupBox[title="Configuration Settings"] QComboBox,
QGroupBox[title="Configuration Settings"] QLineEdit {
    font-weight: bold;
    padding: 3px;
    border: 1px solid #4b7bec;
    border-radius: 2px;
    background-color: #fff;
    font-size: 11px;
}
QGroupBox[title="Configuration Settings"] QComboBox QAbstractItemView {
    font-weight: bold;
}