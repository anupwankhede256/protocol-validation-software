/* UART Style - Blue and White Theme */
QMainWindow {
    background-color: #e0f7f7; /* Light blue background */
}

QMenuBar {
    background-color: #4682B4; /* Dark blue */
    color: white;
    font-size: 14px;
    padding: 2px;
}

QMenuBar::item:selected {
    background-color: #0096FF; /* Brighter blue */
}

QMenu {
    background-color: #4b7bec; /* Medium blue */
    /*border: 1px solid #1434A4;*/
    font-size: 12px;
    padding: 2px;
}

QMenu::item:selected {
    background-color: #0096FF;
    color: white;
}

QAction {
    font-size: 12px;
    color: white;
}

QWidget {
    font-family: Arial, sans-serif;
    font-size: 11px;
}

QPushButton {
    background-color: #00BFFF; /* Bright blue */
    color:000000 ;
    border-radius: 3px;
    padding: 3px 6px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #191970; /* Darker blue on hover */
}

QLineEdit, QComboBox,QSpinBox {
    padding: 3px;
    border: 1px solid #4b7bec;
    border-radius: 2px;
    background-color: #fff;
    font-size: 11px;
}
